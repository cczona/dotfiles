[gc]
        reflogExpire = 180 days
        reflogexpireUnreachable = 90 days
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
	interactive = auto
[format]
  pretty = "%Cblue%h%Creset [%cr] %s"
[user]
	name = cczona
	email = cczona@gmail.com
[pack]
	threads = 0
[core]
# NOTE: this is the source of "sh: -+: invalid option" for git log, git diff, git show!
#	pager = -+$LESS -FRX
	whitespace = -blank-at-eol, -space-before-tab, -indent-with-non-tab, -tab-in-indent, -blank-at-eof, -cr-at-eol
	excludesfile = ~/.gitignore-global
# NOTE: git already calls the environment variable $EDITOR, a reliably platform-independent method. Stick with it.
#       editor = $EDITOR
	quotepath = false
[alias]
	ap = add --patch
	st = status
	ci = commit  -v --cleanup=whitespace -m
	co = checkout
	br = branch -vv
	bra = branch -vv -a
	bl= branch -al
	dc  = diff --cached  --word-diff=color
	dcl = diff --cached
	di  = diff --word-diff=color
	dil = diff
	dt = difftool
	pu = pull
	pr = pull --rebase
	mt = mergetool
	logf = "log --stat --pretty=fuller --decorate --graph"
	logs = "log --oneline --decorate"
	l = "log --stat --pretty=\"%n%C(blue bold)%s%C(reset)%n%h %C(bold)[%cr]%C(reset) %d\""
	unstage = reset HEAD
	re = remote -v
	ls  = ls-tree -r --name-only #NOTE needs something treeish, a commit ref like git ls HEAD or git ls master
	lsr = ls-tree -r --name-only --full-tree # lists all contents of treeish, instead of those just relative to your location
[merge]
  tool = opendiff
  summary = true
[mergetool]
  prompt = false
  keepBackup = false
[mergetool]
  tool = opendiff
[diff]
	tool = opendiff
[difftool]
  prompt = false
  keepBackup = false
[difftool "diffmerge"]
	cmd = diffmerge "$LOCAL" "$REMOTE"
[git-tmbundle]
  gitx-path = /Applications/GitX.app
[branch]
	autosetuprebase = always # pull using rebase instead of merge
