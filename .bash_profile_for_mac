#required for textMate Bundles repository downloads.  See <http://macromates.com/textmate/manual/bundles#getting_more_bundles>
export LC_CTYPE=en_US.UTF-8

# Ruby's path for doing 'require'
export RUBYLIB=$RUBYLIB:~/bin

#choose a slicker editor than (default) Pico
export EDITOR='mate -w'
export SVN_EDITOR="mate -w"

#directly call files within these paths ie. "'cd my-site' instead of 'cd /Users/cczona/Sites/my-site'"
#NOTE: bash doesn't autocomplete the paths, though an install/config of bash-completion might be able to make that happen
export CDPATH=~/Sites:/etc/apache2:/Library:~/Library:$CDPATH

#variables for 'shopt -s cdable_vars' to use
export cs='~/Sites/sansumclinic-org/trunk/ContentStore'
export uucsr='~/Sites/uusantarosa/branches/fresh_start'

#Mac-specific aliases
alias startvnc="sudo SystemStarter start VNC"
alias stopvnc="sudo SystemStarter stop VNC"
alias firefox="/Applications/*Browser\ applications/Firefox.app/Contents/MacOS/firefox-bin -ProfileManager"

#general aliases
alias mysql="mysql -u root -p"
alias mysqldump="mysqldump -u root -p"
alias mysqlimport="mysqlimport -u root -p"
alias mysqlstart="sudo SystemStarter start MySQL"

